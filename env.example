# XLMCP Configuration
# Copy this file to .env and configure

# =============================================================================
# Jupyter Server Configuration
# =============================================================================

# Jupyter Server URL (JupyterHub or standalone Jupyter)
JUPYTER_SERVER_URL=http://localhost:8888

# API Token for authentication
# Generate with: jupyter server --generate-config && jupyter server password
# Or get from JupyterHub: Admin -> User -> New API Token
JUPYTER_API_TOKEN=

# Default notebook directory (used for path validation)
JUPYTER_NOTEBOOK_DIR=~/

# Allowed directories (comma-separated, for security)
JUPYTER_ALLOWED_DIRS=~/projects,~/devs,~/research

# WebSocket timeout for kernel connection (seconds)
JUPYTER_WS_TIMEOUT=30

# Execution timeout for code cells (seconds)
JUPYTER_EXEC_TIMEOUT=300

# =============================================================================
# RAG Knowledge Search Configuration
# =============================================================================

# Cache directory for vector indexes and tracking files
RAG_CACHE_DIR=~/.aix/knowledge

# Token chunk size for document splitting
RAG_CHUNK_SIZE=512

# Token overlap between chunks (for context preservation)
RAG_CHUNK_OVERLAP=200

# Enable automatic refresh of indexes
RAG_AUTO_REFRESH=true

# Auto-refresh check interval in seconds (5 minutes default)
RAG_AUTO_REFRESH_INTERVAL=300

# Default maximum number of search results
RAG_DEFAULT_SEARCH_LIMIT=10

# Default minimum similarity score (0.0-1.0)
RAG_DEFAULT_SIMILARITY_THRESHOLD=0.5

# Skip files larger than this size (in MB)
RAG_MAX_FILE_SIZE_MB=5

# Skip notebook outputs when indexing (reduces noise, but may miss context)
RAG_SKIP_NOTEBOOK_OUTPUTS=true

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Transport type: stdio (for Claude Code) or http (for remote access)
MCP_TRANSPORT=stdio

# HTTP port (only used if MCP_TRANSPORT=http)
MCP_HTTP_PORT=8765

# Maximum output tokens (to avoid overwhelming Claude)
MCP_MAX_OUTPUT_TOKENS=25000
